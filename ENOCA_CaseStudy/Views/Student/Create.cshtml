@model ENOCA_CaseStudy.Models.StudentDto

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>YENİ ÖĞRENCİ BİLGİLERİ</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FacultyID" class="control-label"></label>
                <select asp-for="FacultyID" class="form-control" autocomplete="Fakülte Seçiniz" aria-required="true">
                    @foreach (var faculty in (List<FacultyDto>)ViewData["FacultyList"])
                    {
                        <option value="@faculty.FacultyID" label="@faculty.FacultyName"></option>
                    }

                </select>
                <span asp-validation-for="FacultyID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="SectionName" class="control-label"></label>
                <select asp-for="SectionName" class="form-control" autocomplete="Bölüm Seçiniz" aria-required="true" tabindex="Bölüm Seçiniz">
                    @foreach (var s in (List<SectionDto>)ViewBag.SectionNames)
                    {
                        <option value="@s.SectionName" label="@s.SectionName"></option>
                    }

                </select>
                <span asp-validation-for="SectionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
