@model ENOCA_CaseStudy.Models.StudentDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Öğrenci Bilgilerini Güncelle</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
              
                <input asp-for="StudentID" class="form-control"  type="hidden"/>
               
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input asp-for="FacultyID" type="hidden" class="form-control" />
                <span asp-validation-for="FacultyID" class="text-danger"></span>
            </div><div class="form-group">

                <input asp-for="SectionName" type="hidden" class="form-control" />
                <span asp-validation-for="SectionName" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input asp-for="SectionName" class="form-control" disabled="disabled" type="hidden" />

            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Geri Dön</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
